  <!-- Scripts -->
  <script>
    // tahun otomatis
    document.getElementById('y').textContent = new Date().getFullYear();

    // reveal on scroll
    const observer=new IntersectionObserver(entries=>{entries.forEach(e=>{if(e.isIntersecting)e.target.classList.add('show');});},{threshold:.15});
    document.querySelectorAll('section, .hero, .card, .tl-card').forEach(el=>{el.classList.add('reveal');observer.observe(el);});

    // mobile menu toggle
    const btn=document.querySelector('.nav-toggle');
    const menu=document.querySelector('.menu');
    btn.addEventListener('click',()=>menu.classList.toggle('show'));

    // single language dictionary (no duplicates!)
    const dict={
      id:{
        home:"Home", portfolio:"Portofolio", project:"Project", about:"Tentang", contact:"Kontak",
        hero_title:"Hallo, Saya Aldo Briansyah atau Realdbr",
        hero_desc:"Saya seorang designer Canva & ahli komputer jaringan. Kini juga mengembangkan game Roblox berbasis AI.",
        cta_view:"Lihat Karya", cta_contact:"Hubungi Saya",
        portfolio_sub:"Beberapa karya desain & UI/UX serta aset promosi.",
        pf1_thumb:"Gambar Banner Event", pf1_title:"Banner Event – Mount Lostia", pf1_desc:"Desain banner promosi dengan tema neon biru.",
        pf2_thumb:"Ikon Game", pf2_title:"Ikon & Thumbnail Roblox", pf2_desc:"Ikon/thumbnail bergaya kartun minimalis.",
        pf3_thumb:"UI Screen", pf3_title:"UI Store & Overhead Titles", pf3_desc:"UI store & overhead dengan animasi halus.",
        project_sub:"Rangkuman proyek aktif dan rencana pengembangan.",
        prj1_title:"Mount Lostia – Reborn", 
        prj1_desc:"Game pendakian gunung dengan sistem summit & checkpoint.",
        prj2_title:"City Up – Parkour Langit",
        prj2_desc:"Map parkour naik gedung menuju langit dengan level bertahap.",
        about_p1:"Halo! Saya Aldo Briansyah, dikenal sebagai Realdbr. Saya menyukai pembuatan UI yang rapi ✨, sistem game yang stabil, dan pengalaman pemain yang nyaman.",
        about_p2:"Saya percaya detail kecil seperti animasi halus, warna konsisten, dan layout bersih membuat permainan terasa profesional.",
        summary:"Ringkas", summary_1:"Base: Indonesia", summary_2:"Komunitas: RealDBR Studio (GroupID 500246065)", summary_3:"Fokus: Mount Lostia, UI/UX, event & sistem player",
        contact_sub:"Terbuka untuk kolaborasi desain, pembuatan UI, dan proyek Roblox."
      },
      en:{
        home:"Home", portfolio:"Portfolio", project:"Projects", about:"About", contact:"Contact",
        hero_title:"Hello, I'm Aldo Briansyah, also known as Realdbr",
        hero_desc:"I'm a Canva designer & network technician. I also develop Roblox games powered by AI.",
        cta_view:"View Works", cta_contact:"Contact Me",
        portfolio_sub:"Selected design works, UI/UX, and promo assets.",
        pf1_thumb:"Event Banner", pf1_title:"Event Banner – Mount Lostia", pf1_desc:"Promotional banner with neon blue theme.",
        pf2_thumb:"Game Icon", pf2_title:"Roblox Icon & Thumbnail", pf2_desc:"Minimalist cartoon-style icons/thumbnails.",
        pf3_thumb:"UI Screen", pf3_title:"Store UI & Overhead Titles", pf3_desc:"Store UI and overhead titles with smooth animations.",
        project_sub:"Active projects and roadmap.",
        prj1_title:"Mount Lostia – Reborn", 
        prj1_desc:"Mountain climbing game with summit & checkpoint progression.",
        prj2_title:"City Up – Sky Parkour",
        prj2_desc:"Parkour tower climb up to the sky with progressive challenges.",
        about_p1:"Hi! I'm Aldo (Realdbr). I love clean UI ✨, stable game systems, and comfortable player experience.",
        about_p2:"Small details like smooth animation, consistent colors, and tidy layouts make games feel professional.",
        summary:"At a glance", summary_1:"Base: Indonesia", summary_2:"Community: RealDBR Studio (GroupID 500246065)", summary_3:"Focus: Mount Lostia, UI/UX, events & player systems",
        contact_sub:"Open for design/UI work and Roblox projects."
      }
    };

    function applyLang(l){
      document.querySelectorAll('[data-i18n]').forEach(el=>{
        const key=el.getAttribute('data-i18n');
        if(dict[l] && dict[l][key]) el.textContent=dict[l][key];
      });
      document.querySelectorAll('.lang-btn').forEach(b=>b.classList.toggle('active',b.dataset.setlang===l));
    }

    // init language + handlers
    document.querySelectorAll('.lang-btn').forEach(btn=>btn.addEventListener('click',()=>applyLang(btn.dataset.setlang)));
    applyLang('id');

// PROJECT VIEW DATA
const projectData = {
  lostia:{
    title:"Mount Lostia – Reborn",
    desc:"Game pendakian dengan sistem summit, checkpoint, aura, shop & event berkala.",
    img:"lostia-preview.png" // letakkan gambarnya di folder yang sama
  },
  city:{
    title:"City UP Lostia",
    desc:"Game parkour naik gedung dengan level berlapis ke langit.",
    img:"cityup-preview.png"
  }
};

// OPEN MODAL
document.querySelectorAll('.view-btn').forEach(btn=>{
  btn.addEventListener('click',()=>{
    const key = btn.dataset.project;
    document.getElementById('modal-title').textContent = projectData[key].title;
    document.getElementById('modal-desc').textContent = projectData[key].desc;
    document.getElementById('modal-img').src = projectData[key].img;
    document.getElementById('project-modal').style.display="flex";
  });
});

// CLOSE MODAL
document.getElementById('modal-close').onclick = ()=>document.getElementById('project-modal').style.display="none";
document.getElementById('project-modal').onclick = e=>{
  if(e.target.id === "project-modal"){
    e.currentTarget.style.display="none";
  }
};

  </script>
